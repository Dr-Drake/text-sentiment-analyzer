<div class="container min-vh-100 d-flex flex-column">
    <h1 class="mt-3 text-center">Text Sentiment Analysis</h1>
    
    <!-- Text Input content -->
    <div class="mt-5">
        <label for="exampleFormControlTextarea1" class="form-label">Enter a text</label>
        <textarea class="form-control" id="s-input" rows="5"></textarea>
    </div>

    <!-- Analysis Result -->
    <div class="mt-5 d-flex justify-content-center">
        <div id="s-card" class="rounded analysis-card p-3">
            <p>Sentiment Score: <span id="s-score"></span></p>
            <p>General Sentiment: <span id="g-sentiment"></span></p>
            <div class="d-flex justify-content-center mt-4">
                <i id="s-emote" class="fa-solid fa-face-meh"></i>
            </div>
        </div>
    </div>
</div>